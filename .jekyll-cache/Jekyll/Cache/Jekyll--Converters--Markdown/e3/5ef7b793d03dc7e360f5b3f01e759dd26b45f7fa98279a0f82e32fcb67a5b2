  <span class="p">}</span>

  <span class="nc">.cover--large</span><span class="nd">:hover</span> <span class="p">{</span>
    <span class="nl">filter</span><span class="p">:</span> <span class="n">brightness</span><span class="p">(</span><span class="m">1.2</span><span class="p">);</span>
  <span class="p">}</span>

